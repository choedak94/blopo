<div class="py-5">
  <h3 class="text-base font-semibold leading-6 text-gray-900">New Blog</h3>
</div>

<%= simple_form_for @blog_post do |f| %>
  <div class="relative">
    <div class="overflow-hidden rounded-lg border-none shadow-sm focus-within:border-indigo-500 focus-within:ring-1 focus-within:ring-indigo-500">
      <%= f.text_field :title, label: false, input_html: { id: "title", class: "block w-full border-0 pt-2.5 text-lg font-medium placeholder:text-gray-400 focus:ring-0" }, placeholder: "Title" %>
      <%= f.rich_text_area :content,
            as: :text,
            label: false,
            input_html: {
              id: "description",
              class: "block w-full resize-none py-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6",
              rows: 10,
              cols: 50
            }%>

      <!-- Spacer element to match the height of the toolbar -->
      <div aria-hidden="true">
        <div class="py-2">
          <div class="h-5"></div>
        </div>
      </div>
    </div>
    <div class="absolute inset-x-px bottom-0">
      <div class="flex items-center justify-end space-x-3 border-t border-gray-200 px-2 py-2 sm:px-3">
        <div class="flex-shrink-0">
          <%= f.button :submit, "Create", class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      </div>
    </div>
  </div>
  <%= f.datetime_select :published_at, include_blank: true %>
<% end %>
