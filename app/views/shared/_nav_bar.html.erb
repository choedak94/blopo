 <nav class="bg-gray-100" data-controller="mobile-menu">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between">

      <div class="flex space-x-4">
        <div>
         <%= link_to dashboard_blog_posts_path, class: "flex items-center py-5 px-2 text-gray-700 hover:text-gray-900" do %>
            <%= image_tag("logo.png", alt: 'blopo logo', class: "h-6 w-6 mr-1") %>
            <span class="font-bold">BloPo</span>
          <% end %>
        </div>
      </div>

      <div class="hidden md:flex items-center space-x-1">
        <% if user_signed_in? %>
          <%= link_to edit_user_registration_path do %>
            <span class="py-5 px-4">Profile</span>
          <% end %>
          <%= link_to blog_posts_path do %>
            <span class="py-5 px-4">My Blog</span>
          <% end %>
          <%= button_to destroy_user_session_path, method: :delete do %>
            <span class="py-5 px-4">Log out</span>
